<Page
    x:Class="LeetCode75Solutions.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LeetCode75Solutions.UWP"
    Background="#FFE3F2FD">
    <Page.TopAppBar>
        <CommandBar Background="#FF2196F3" Foreground="White">
            <CommandBar.Content>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Width="48" Height="48" />

                    <TextBlock Text="LeetCode 75 - Home"
                           Grid.Column="1"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>
                </Grid>
            </CommandBar.Content>
        </CommandBar>
    </Page.TopAppBar>


    <Grid Padding="20,10,20,20">
        <StackPanel Spacing="12">
            <TextBlock Text="Select a Problem:"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="#FF0D47A1"
                       Margin="0,0,0,6"/>

            <ListView x:Name="ProblemsListView"
                      Tapped="ProblemsListView_Tapped"
          SelectionMode="Single"
          Background="Transparent"
          BorderThickness="0">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                BorderBrush="#FF2196F3"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="12"
                                Margin="4">
                            <TextBlock Text="{Binding}"
                                       FontSize="18"
                                       Foreground="#FF0D47A1"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ListViewItemPresenter ContentTransitions="{TemplateBinding ContentTransitions}"
                                                           Background="{TemplateBinding Background}"
                                                           Content="{TemplateBinding Content}"
                                                           ContentTemplate="{TemplateBinding ContentTemplate}"
                                                           SelectedBackground="#FF90CAF9"
                                                           PointerOverBackground="#FFBBDEFB"
                                                           SelectionCheckMarkVisualEnabled="False"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
